            </Button>
            <Button Style="{StaticResource closeButton}" Click="closeButtonClicked">
                <Icon:PackIconMaterial Kind="Close" Style="{StaticResource closeButtinIcon}"/>
            </Button>
        </StackPanel>-->

        <ComboBox x:Name="versionCombo" Style="{StaticResource versionCombo}" ItemsSource="{Binding Versions}">
            <ComboBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFCFD5E5" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.BorderBrush>
        </ComboBox>

        <Button Style="{StaticResource startButton}" Click="StartButtonClicked"></Button>
    </Grid>

</UserControl>
